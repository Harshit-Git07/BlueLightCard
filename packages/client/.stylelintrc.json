{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "color-named": "never",
    "function-disallowed-list": ["rgba", "rgb"],
    "unit-allowed-list": ["%", "deg", "px", "rem"],
    "scss/dollar-variable-empty-line-before": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "screen",
          "responsive"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "node_modules/**/*.{css,scss}",
    "dist/**/*.{css,scss}"
  ]
}