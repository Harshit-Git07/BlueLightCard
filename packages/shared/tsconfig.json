{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@blc-mono/shared/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ES5"],
    "esModuleInterop": true
  }
}
