{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/root/*": ["./*"],
      "@/services/*": ["src/services/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/components/*": ["src/common/components/*"],
      "@/context/*": ["src/common/context/*"],
      "@/hoc/*": ["src/common/hoc/*"],
      "@/offers/components/*": ["src/offers/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/hooks/*": ["src/common/hooks/*"],
      "@/utils/*": ["src/common/utils/*"],
      "@/layouts/*": ["src/common/layouts/*"],
      "@/types/*": ["src/common/types/*"],
      "@/global-vars": ["global-vars"],
      "@/globals/*": ["src/common/globals/*"],
      "@/page-types/*": ["src/common/page-types/*"],
      "@/page-components/*": ["src/page-components/*"],
      "@/scripts/*": ["./scripts/*"],
      "@core/*": ["../api/core/src/*"],

      // TODO: Remove once data is pulled in via GQL and data folder is no longer needed.
      "@/data/*": ["data/*"],
      "@bluelightcard/shared-ui/*": ["../shared-ui/src/*"],
      "@blc/offers-cms/*": ["../api/offers-cms/src/*"],
      "@blc/offers-legacy/*": ["../api/offers/src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES6"
    },
    "files": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tailwind.config.ts"],
  "exclude": ["node_modules", "stack.ts", "../api/offers-cms/src/*"]
}
