 {
  "search.exclude": {
    "**/.sst": true
  },
  "eslint.workingDirectories": [
    {
      "directory": "packages/api",
      "changeProcessCWD": true
    },
    {
      "directory": "packages/web",
      "changeProcessCWD": true
    }
  ],
  "css.validate": false,
  "less.validate": false,
  "stylelint.validate": [
    "css"
  ],
  "editor.formatOnSave": false,
  "eslint.run": "onType",
  "cucumberautocomplete.steps": [
    "packages/web/e2e/steps/*.ts"
  ],
  "cucumberautocomplete.strictGherkinCompletion": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#b095f1",
    "activityBar.background": "#b095f1",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#fbeae3",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#b095f1",
    "statusBar.background": "#8f68eb",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#6e3be5",
    "statusBarItem.remoteBackground": "#8f68eb",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#8f68eb",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#8f68eb99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#8f68eb",

}
