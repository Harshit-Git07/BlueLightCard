{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@blc-mono/core/*": ["../core/src/*"],
      "@blc-mono/shared/*": ["../../shared/src/*"]
    }
  },
  "ts-node": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["DOM", "ES5"],
    "esModuleInterop": true
  }
}
