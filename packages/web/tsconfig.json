{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/common/components/*",
      ],
      "@/context/*": [
        "src/common/context/*",
      ],
      "@/hoc/*": [
        "src/common/hoc/*",
      ],
      "@/offers/components/*": [
        "src/offers/components/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/hooks/*": [
        "src/common/hooks/*"
      ],
      "@/utils/*": [
        "src/common/utils/*"
      ],
      "@/layouts/*": [
        "src/common/layouts/*"
      ],
      "@/types/*": [
        "src/common/types/*"
      ],
      "@/global-vars": [
        "global-vars"
      ],
      "@/page-types/*": [
        "src/common/page-types/*"
      ],
      "@core/*": [
        "../api/core/src/*"
      ],

      // TODO: Remove once data is pulled in via GQL and data folder is no longer needed.
      "@/data/*": [
        "data/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES6"
    },
    "files": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
