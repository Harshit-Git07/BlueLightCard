{
  "openapi": "3.0.0",
  "info": {
    "title": "Discovery API",
    "version": "1.0.0",
    "description": "API for searching offers on Blue Light Card"
  },
  "servers": [
    {
      "url": "Add url here"
    }
  ],
  "tags": [
    {
      "name": "Search"
    }
  ],
  "paths": {
    "/search": {
      "get": {
        "tags": ["Search"],
        "summary": "Search for offers",
        "description": "Search for offers based on various criteria",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "The term to search for",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "organisation",
            "in": "query",
            "description": "The organisation the user belongs to",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "dob",
            "in": "query",
            "description": "The users DOB in YYYY-MM-DD format",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "offerType",
            "in": "query",
            "description": "The offer type to search for - e.g. online",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/SearchResponse.json#/SearchResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Valid brand not provided"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/menus": {
      "get": {
        "tags": ["Menus"],
        "summary": "Retrieve Menus of Offers",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "The id or id's of the menus to retrieve",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "./schemas/MenuOffers.json#/enums/MenuID"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "dealsOfTheWeek": {
                      "type": "array",
                      "items": {
                        "$ref": "./schemas/MenuOffers.json#/dealsOfTheWeek"
                      }
                    },
                    "featured": {
                      "type": "array",
                      "items": {
                        "$ref": "./schemas/MenuOffers.json#/featured"
                      }
                    },
                    "flexible": {
                      "type": "array",
                      "items": {
                        "$ref": "./schemas/MenuOffers.json#/flexible"
                      }
                    },
                    "marketplace": {
                      "type": "array",
                      "items": {
                        "$ref": "./schemas/MenuOffers.json#/marketplace"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid Menu ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Invalid ID"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories": {
      "get": {
        "tags": ["Categories"],
        "summary": "Get list of offer categories",
        "description": "Get list of offer categories",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/CategoriesResponse.json#/CategoriesResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/categories/{id}": {
      "get": {
        "tags": ["Categories"],
        "summary": "Get individual category of offer",
        "description": "Get individual category of offer",
        "parameters": [
          {
            "name": "organisation",
            "in": "query",
            "description": "The organisation the user belongs to",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "dob",
            "in": "query",
            "description": "The users DOB in YYYY-MM-DD format",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/CategoryResponse.json#/CategoryResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/companies": {
      "get": {
        "tags": ["Companies"],
        "summary": "Get all companies",
        "description": "Get IDs and names of all companies with valid offers",
        "parameters": [
          {
            "name": "organisation",
            "in": "query",
            "description": "The organisation the user belongs to",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "dob",
            "in": "query",
            "description": "The users DOB in YYYY-MM-DD format",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "skipCache",
            "in": "query",
            "description": "Choose whether to skip cache within the lambda",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/CompaniesResponse.json#/CompaniesResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
