{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@blc-mono/core/*": ["../core/src/*"],
      "@blc-mono/discovery/*": ["./*"],
      "@blc-mono/members/*": ["../members/*"]
    }
  }
}
