{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@blc-mono/orders/*": ["./*"],
      "@blc-mono/stacks/*": ["../../../stacks/*"],
      "@blc-mono/core/*": ["../core/src/*"],
      "@blc-mono/payments/*": ["../payments/src/*"],
      "@blc-mono/shared/*": ["../../shared/src/*"]
    }
  },
  "exclude": []
}
