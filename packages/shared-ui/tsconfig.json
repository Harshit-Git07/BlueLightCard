{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@blc/offers-legacy/*": ["../api/offers/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    ".storybook/**/*.tsx",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
