{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@blc-mono/core/*": ["../core/src/*"],
      "@blc-mono/stacks/*": ["../../../stacks/*"],
      "@blc-mono/shared/*": ["../../shared/src/*"]
    }
  }
}
