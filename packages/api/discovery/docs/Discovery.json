{
  "openapi": "3.0.0",
  "info": {
    "title": "Discovery API",
    "version": "1.0.0",
    "description": "API for searching offers on Blue Light Card"
  },
  "servers": [
    {
      "url": "Add url here"
    }
  ],
  "tags": [
    {
      "name": "Search"
    }
  ],
  "paths": {
    "/search": {
      "get": {
        "tags": ["Search"],
        "summary": "Search for offers",
        "description": "Search for offers based on various criteria",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "The term to search for",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "organisation",
            "in": "query",
            "description": "The organisation the user belongs to",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "dob",
            "in": "query",
            "description": "The users DOB in YYYY-MM-DD format",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "offerType",
            "in": "query",
            "description": "The offer type to search for - e.g. online",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/SearchResponse.json#/SearchResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Valid brand not provided"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      },
      "options": {
        "tags": ["Search"],
        "summary": "CORS preflight request",
        "description": "Handles the CORS preflight request for the newSearch endpoint",
        "responses": {
          "200": {
            "description": "Successful CORS preflight response",
            "headers": {
              "Access-Control-Allow-Credentials": {
                "schema": {
                  "type": "string"
                },
                "example": "true"
              },
              "Access-Control-Allow-Headers": {
                "schema": {
                  "type": "string"
                },
                "example": "Content-Type,Authorization"
              },
              "Access-Control-Allow-Methods": {
                "schema": {
                  "type": "string"
                },
                "example": "OPTIONS,POST"
              },
              "Access-Control-Allow-Origin": {
                "schema": {
                  "type": "string"
                },
                "example": "*"
              },
              "Content-Length": {
                "schema": {
                  "type": "string"
                },
                "example": "0"
              },
              "Content-Type": {
                "schema": {
                  "type": "string"
                },
                "example": "application/json"
              },
              "Date": {
                "schema": {
                  "type": "string"
                },
                "example": "Tue, 17 Sep 2024 09:36:31 GMT"
              },
              "Via": {
                "schema": {
                  "type": "string"
                },
                "example": "1.1 284574e4f15389d93bfcb84d196a92f0.cloudfront.net (CloudFront)"
              },
              "X-Amz-Apigw-Id": {
                "schema": {
                  "type": "string"
                },
                "example": "ePkQ7GpXrPEEUow="
              },
              "X-Amz-Cf-Id": {
                "schema": {
                  "type": "string"
                },
                "example": "J4EVzJl73E4pD-lmg0RZ-tU2t50lwn4GBzqDw0kG_ykZ8TgX3A3XPw=="
              },
              "X-Amz-Cf-Pop": {
                "schema": {
                  "type": "string"
                },
                "example": "FRA60-P8"
              },
              "X-Amzn-Requestid": {
                "schema": {
                  "type": "string"
                },
                "example": "b5218345-a2db-41ae-8860-b97327bdada4"
              },
              "X-Cache": {
                "schema": {
                  "type": "string"
                },
                "example": "Miss from cloudfront"
              }
            }
          }
        }
      }
    },
    "/menus": {
      "get": {
        "tags": ["Menus"],
        "summary": "Retrieve Menus of Offers",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id or id's of the menus to retrieve",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "./schemas/MenuOffers.json#/enums/MenuID"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "dealsOfTheWeek": {
                      "type": "array",
                      "items": {
                        "$ref": "./schemas/MenuOffers.json#/dealsOfTheWeek"
                      }
                    },
                    "featured": {
                      "type": "array",
                      "items": {
                        "$ref": "./schemas/MenuOffers.json#/featured"
                      }
                    },
                    "flexible": {
                      "type": "array",
                      "items": {
                        "$ref": "./schemas/MenuOffers.json#/flexible"
                      }
                    },
                    "marketplace": {
                      "type": "array",
                      "items": {
                        "$ref": "./schemas/MenuOffers.json#/marketplace"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid Menu ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Invalid ID"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories": {
      "get": {
        "tags": ["Categories"],
        "summary": "Get list of offer categories",
        "description": "Get list of offer categories",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/CategoriesResponse.json#/CategoriesResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      },
      "options": {
        "tags": ["Categories"],
        "summary": "CORS preflight request",
        "description": "Handles the CORS preflight request for the Categories endpoint",
        "responses": {
          "200": {
            "description": "Successful CORS preflight response",
            "headers": {
              "Access-Control-Allow-Credentials": {
                "schema": {
                  "type": "string"
                },
                "example": "true"
              },
              "Access-Control-Allow-Headers": {
                "schema": {
                  "type": "string"
                },
                "example": "Content-Type,Authorization"
              },
              "Access-Control-Allow-Methods": {
                "schema": {
                  "type": "string"
                },
                "example": "OPTIONS,POST"
              },
              "Access-Control-Allow-Origin": {
                "schema": {
                  "type": "string"
                },
                "example": "*"
              },
              "Content-Length": {
                "schema": {
                  "type": "string"
                },
                "example": "0"
              },
              "Content-Type": {
                "schema": {
                  "type": "string"
                },
                "example": "application/json"
              },
              "Date": {
                "schema": {
                  "type": "string"
                },
                "example": "Tue, 17 Sep 2024 09:36:31 GMT"
              },
              "Via": {
                "schema": {
                  "type": "string"
                },
                "example": "1.1 284574e4f15389d93bfcb84d196a92f0.cloudfront.net (CloudFront)"
              },
              "X-Amz-Apigw-Id": {
                "schema": {
                  "type": "string"
                },
                "example": "ePkQ7GpXrPEEUow="
              },
              "X-Amz-Cf-Id": {
                "schema": {
                  "type": "string"
                },
                "example": "J4EVzJl73E4pD-lmg0RZ-tU2t50lwn4GBzqDw0kG_ykZ8TgX3A3XPw=="
              },
              "X-Amz-Cf-Pop": {
                "schema": {
                  "type": "string"
                },
                "example": "FRA60-P8"
              },
              "X-Amzn-Requestid": {
                "schema": {
                  "type": "string"
                },
                "example": "b5218345-a2db-41ae-8860-b97327bdada4"
              },
              "X-Cache": {
                "schema": {
                  "type": "string"
                },
                "example": "Miss from cloudfront"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
