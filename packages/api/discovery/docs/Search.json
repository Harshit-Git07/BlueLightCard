{
  "openapi": "3.0.0",
  "info": {
    "title": "Blue Light Card API",
    "version": "1.0.0",
    "description": "API for searching offers on Blue Light Card"
  },
  "servers": [
    {
      "url": "Add url here"
    }
  ],
  "tags": [
    {
      "name": "Search"
    }
  ],
  "paths": {
    "/search": {
      "post": {
        "tags": ["Search"],
        "summary": "Search for offers",
        "description": "Search for offers based on various criteria",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./schemas/SearchRequest.json#/SearchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/SearchResponse.json#/SearchResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Valid brand not provided"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      },
      "options": {
        "tags": ["Search"],
        "summary": "CORS preflight request",
        "description": "Handles the CORS preflight request for the newSearch endpoint",
        "responses": {
          "200": {
            "description": "Successful CORS preflight response",
            "headers": {
              "Access-Control-Allow-Credentials": {
