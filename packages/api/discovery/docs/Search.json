                "schema": {
                  "type": "string"
                },
                "example": "OPTIONS,POST"
              },
              "Access-Control-Allow-Origin": {
                "schema": {
                  "type": "string"
                },
                "example": "*"
              },
              "Content-Length": {
                "schema": {
                  "type": "string"
                },
                "example": "0"
              },
              "Content-Type": {
                "schema": {
                  "type": "string"
                },
                "example": "application/json"
              },
              "Date": {
