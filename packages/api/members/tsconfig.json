{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "module": "CommonJS",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@blc-mono/members/*": ["./*"],
      "@blc-mono/core/*": ["../core/src/*"],
      "@blc-mono/shared/*": ["../../shared/src/*"]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["es2021"],
    "esModuleInterop": true,
    "require": ["tsconfig-paths/register"]
  }
}
